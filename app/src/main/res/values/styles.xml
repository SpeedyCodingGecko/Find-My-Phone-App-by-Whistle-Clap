<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_border</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue_border</item>
        <item name="colorControlActivated">@color/blue_border</item>
    </style>

    <style name="CustomCheckboxStyle">
        <item name="android:width">40dp</item> <!-- Adjust the width as per your requirement -->
        <item name="android:height">40dp</item> <!-- Adjust the height as per your requirement -->
        <!-- Other attributes like background, text color, etc. can also be customized here -->
    </style>


</resources>