<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toolapp.findphonebyclapandwhistle.MyActivities.StartActivity">

    <ScrollView
        android:layout_above="@id/bannerLayout"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_ad_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginRight="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/claptofind" />
            </FrameLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/_90sdp"
                android:id="@+id/rl_btn_letsstart"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_below="@id/fl_ad_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@color/blue_border">
                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/iv_plan"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/sound" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@id/iv_plan"
                    android:gravity="center|right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_letsstart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:maxWidth="@dimen/_110sdp"
                        android:text="@string/Lets_Start"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_letsstart2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_letsstart"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="0dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:maxWidth="@dimen/_70sdp"
                        android:maxLines="2"
                        android:text="@string/Lets_Start2"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_8ssp" />
                </RelativeLayout>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_btn_letsstart"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp">
                <LinearLayout
                    android:id="@+id/rl_rateus_btn"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_rateus" />
                    <TextView
                        android:gravity="center"
                        android:maxWidth="@dimen/_55sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@string/rate_us"
                        android:visibility="gone"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl_shareapp_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rl_rateus_btn">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/share" />
                    <TextView
                        android:gravity="center"
                        android:maxWidth="@dimen/_55sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@string/share_app"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl_privacy_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/privacy" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</RelativeLayout>